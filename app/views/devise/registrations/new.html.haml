%h2 S'inscrire
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    = f.email_field :email, autofocus: true
  .field
    = f.label :password, "Mot de passe"
    - if @validatable
      %em
        (#{@minimum_password_length} caractères minimum)
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, "Confirmation"
    = f.password_field :password_confirmation, autocomplete: "off"
  .field
    = f.label :naissance, "Date de naissance"
    = f.date_field :naissance
  .field
    = f.label :sexe
    %select{:name => "user[sexe]", :id => "user_sexe"}
      %option
      %option{:value => "Homme"} Homme
      %option{:value => "Femme"} Femme
  .field
    = f.label :etat_civil
    %select{:name => "user[etat_civil]", :id => "user_etat_civil"}
      %option
      %option{:value => "Célibataire"} Célibataire
      %option{:value => "Marié(e)"} Marié(e)
      %option{:value => "Veuf/Veuve"} Veuf/Veuve
  .field
    = f.label :pop_foyer, "Population foyer"
    = f.number_field :pop_foyer, in: 1.0..200.0, value: 1
  .field
    = f.label :pop_enfant, "Population enfant"
    = f.number_field :pop_enfant, in: 0.0..200.0, value: 0
  .field
    = f.label :pop_animaux, "Population animaux"
    = f.number_field :pop_animaux, in: 0.0..200.0, value: 0
  .field
    = f.label :revenus
    = f.number_field :revenus, in: 0.0..20000000000.0, value: 0
  .actions
    = f.submit "S'inscrire"
= render "devise/shared/links"
