- if controller_name != 'sessions'
  = link_to "Se connecter", new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "S'inscrire", new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Mot de passe perdu ?", new_password_path(resource_name)
  %br/
- if devise_mapping.omniauthable?
  - resource_class.omniauth_providers.each do |provider|
    = link_to "S'enregistrer avec #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider)
    %br/
